<div class="container main">

  <div class="row d-flex justify-content-center mt-5">
      <h1><%= @cocktail.name %></h1>
  </div>

  <div class="row mt-3">
    <div class="col-sm-12 col-md-6">
      <h3>Recept</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Sestavine</th>
            <th>Koliƒçina</th>
            <th>Kako dodati</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Nazaj na vse koktejle", root_path %>
    </div>
    <div class="col-sm-12 col-md-6">
      <div class="picture-show-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/600x400/?cocktail');">
    </div>
  </div>
</div>
